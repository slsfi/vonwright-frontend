{
  "name": "vonwright.sls.fi",
  "version": "1.4.2-production.1",
  "description": "Frontend of vonwright.sls.fi based on the Angular web app for the SLS Digital Edition Platform",
  "homepage": "https://github.com/slsfi/vonwright-frontend#readme",
  "license": "MIT",
  "private": true,
  "scripts": {
    "ng": "ng",
    "start": "ng serve --configuration=development,sv",
    "extract-i18n": "ng extract-i18n --sort idAsc",
    "generate-sitemap": "node ./prebuild-generate-sitemap.js",
    "generate-static-collection-menus": "node ./prebuild-generate-static-collection-menus.js",
    "build:ssr": "ng build --configuration production && ng run app:server:production && copyfiles proxy-server.js dist/app",
    "serve:ssr": "node dist/app/proxy-server.js",
    "ssr-start": "npm run build:ssr && npm run serve:ssr",
    "gzipper": "gzipper",
    "compress": "gzipper compress ./dist/app/browser --include html,htm,xml,txt,css,js,svg,ico,json,ttf,otf --threshold 1300 --gzip-level 9 --remove-larger"
  },
  "dependencies": {
    "@angular/animations": "^18.0.5",
    "@angular/common": "^18.0.5",
    "@angular/compiler": "^18.0.5",
    "@angular/core": "^18.0.5",
    "@angular/forms": "^18.0.5",
    "@angular/platform-browser": "^18.0.5",
    "@angular/platform-browser-dynamic": "^18.0.5",
    "@angular/platform-server": "^18.0.5",
    "@angular/router": "^18.0.5",
    "@angular/ssr": "^18.0.6",
    "@ionic/angular": "^8.2.2",
    "@ionic/angular-server": "^8.2.2",
    "epubjs": "~0.3.93",
    "express": "^4.19.2",
    "htmlparser2": "^9.1.0",
    "ionicons": "^7.4.0",
    "marked": "^13.0.1",
    "rxjs": "~7.8.1",
    "tslib": "^2.6.3",
    "zone.js": "~0.14.7"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^18.0.6",
    "@angular/cli": "^18.0.6",
    "@angular/compiler-cli": "^18.0.5",
    "@angular/language-service": "^18.0.5",
    "@angular/localize": "^18.0.5",
    "@types/express": "^4.17.21",
    "@types/jasmine": "~5.1.4",
    "@types/node": "^20.14.9",
    "browser-sync": "^3.0.2",
    "copyfiles": "^2.4.1",
    "gzipper": "^7.2.0",
    "jasmine-core": "~5.1.2",
    "karma": "~6.4.3",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.1",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "ng-extract-i18n-merge": "^2.12.0",
    "typescript": "~5.4.5"
  }
}